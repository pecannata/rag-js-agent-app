#!/bin/bash

# Mac Stop Script for RAG-JS-Agent-App
# Run this script to stop the production server running in tmux

echo "ğŸ›‘ Stopping production server..."

SESSION_NAME="rag-js-agent-app"

# Check if tmux is installed
if ! command -v tmux &> /dev/null; then
    echo "âš ï¸  tmux is not installed, falling back to pkill..."
    # Fallback to old method if tmux is not available
    echo "ğŸ”„ Cleaning up any remaining processes..."
    pkill -f "npm start" || true
    pkill -f "next-server" || true
    echo "âœ… Stop complete (using pkill)"
    exit 0
fi

# Check if tmux session exists
if tmux has-session -t $SESSION_NAME 2>/dev/null; then
    echo "ğŸ“‹ Found tmux session: $SESSION_NAME"
    echo "ğŸ”„ Stopping tmux session..."
    tmux kill-session -t $SESSION_NAME
    echo "âœ… tmux session stopped"
else
    echo "ğŸ“‹ No tmux session found with name: $SESSION_NAME"
fi

# Fallback: kill any remaining processes
echo "ğŸ”„ Cleaning up any remaining processes..."
pkill -f "npm start" || true
pkill -f "next-server" || true

# Clean up old PID file if it exists
if [ -f "app.pid" ]; then
    echo "ğŸ§¹ Removing old PID file..."
    rm app.pid
fi

echo "âœ… Stop complete"

# Check if anything is still running
REMAINING=$(ps aux | grep -E "(npm start|next-server)" | grep -v grep | wc -l)
if [ $REMAINING -eq 0 ]; then
    echo "ğŸ¯ No remaining processes found"
else
    echo "âš ï¸  Warning: Some processes may still be running"
    echo "   Check with: ps aux | grep next"
    echo "   Or check tmux sessions: tmux ls"
fi
